<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="base_button">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>

        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">30sp</item>

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="number_button" parent="base_button">
        <item name="backgroundTint">@color/brown</item>
    </style>

    <style name="operator_button" parent="base_button">
        <item name="backgroundTint">@color/green</item>
    </style>

    <style name="clear_button" parent="base_button">
        <item name="backgroundTint">@color/red</item>
    </style>

    <style name="equals_button" parent="base_button">
        <item name="backgroundTint">@color/blue</item>
    </style>
</resources>